<calculater_desing>:
    GridLayout:
        cols:1
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            size_hint_y:.35
            Label:
                id: qs_txt
                text:"0"
                font_size: '25sp'
                color: 0,0,0,1
                canvas.before:
                    Color:
                        rgba: 0.9,0.9,0.9,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: ans_txt
                text:"0"
                font_size: '25sp'
                color: 0,0,0,1
                canvas.before:
                    Color:
                        rgba: 0.9,0.9,0.9,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
        
        GridLayout:
            rows:6
            cols:4
            size: root.height, root.width
            Button:
                text:"7"
                on_press: root.new_txt(7)
                on_release: root.newest()
                background_color: 0.8,0.8,0.8,1
                color: 0,0,0,1
                border: 10,10,10,10
                background_normal: ''
                background_down: ''
                canvas.before:
                    Color:
                        rgba: (0.2,0.2,0.2,1) if self.state=='normal' else (0.6,0.6,0.6,1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]

