<calculater_desing>
    GridLayout:
        cols:1
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            size_hint_y:.35
            Label:
                id: qs_txt
                text:"0"
            Label:
                id: ans_txt
                text:"0"
        
        GridLayout:
            rows:6
            cols:4
            size: root.height, root.width
            Button:
                text:"7"
                on_press: root.new_txt(7)
                on_release: root.newest()
            Button:
                text:"8"
                on_press: root.new_txt(8)
                on_release: root.newest()
            Button:
                text:"9"
                on_press: root.new_txt(9)
                on_release: root.newest()
            Button:
                text:"X"
                on_press: root.new_txt("*")
                on_release: root.newest()
            Button:
                text:"4"
                on_press: root.new_txt(4)
                on_release: root.newest()
            Button:
                text:"5"
                on_press: root.new_txt(5)
                on_release: root.newest()
            Button:
                text:"6"
                on_press: root.new_txt(6)
                on_release: root.newest()
            Button:
                text:"-"
                on_press: root.new_txt("-")
                on_release: root.newest()

            Button:
                text:"1"
                on_press: root.new_txt(1)
                on_release: root.newest()
            Button:
                text:"2"
                on_press: root.new_txt(2)
                on_release: root.newest()
            Button:
                text:"3"
                on_press: root.new_txt(3)
                on_release: root.newest()
            Button:
                text:"+"
                on_press: root.new_txt("+")
                on_release: root.newest()
            Button:
                text:"="
            Button:
                text:"0"
                on_press: root.new_txt(0)
                on_release: root.newest()
            Button:
                text:"<"
                on_press: root.back_escape()
                on_release: root.newest()
            Button:
                text:"/"
                on_press: root.new_txt("/")
                on_release: root.newest()